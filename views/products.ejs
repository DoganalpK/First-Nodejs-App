<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Urunler</title>
</head>

<body>

    <div class="container mt-3">
        <div class="row">
            <div class="col-12">
                <% productList.forEach(product=> { %>
                    <div class="card mb-3">
                        <div class="row">
                            <div class="col-4">
                                <img src="/images/<%= product.imgPath %>" alt="" class="img-fluid">
                            </div>
                            <div class="col-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="/products/<%= product.id %>">
                                            <%= product.name %>
                                        </a>
                                    </h5>
                                    <p class="card-text">
                                        <%= product.price %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

</body>

</html>