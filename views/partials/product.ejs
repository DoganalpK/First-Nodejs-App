<div class="card mb-3">
    <div class="row">
        <div class="col-4">
            <img src="/images/<%= ImagePath %>" alt="" class="img-fluid">
        </div>
        <div class="col-8">
            <div class="card-body">
                <h3 class="card-title">
                    <a href="/products/<%= Id %>">
                        <%= Name %>
                    </a>
                </h3>
                <p class="card-text">
                    <%= Price %>
                </p>
            </div>
        </div>
    </div>
</div>